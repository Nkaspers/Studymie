<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1300.0" style="-fx-background-color: #DBDBDB;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.semesterbreak.PrimaryController">
   <left>
      <VBox prefWidth="300.0" styleClass="left-bar" stylesheets="@editorview.css" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="Infinity" prefHeight="50.0">
               <children>
                  <Button fx:id="projectButton" mnemonicParsing="false" onAction="#projectBtn" prefWidth="100.0" styleClass="project-button" stylesheets="@editorview.css" text="Projekt" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin></Button>
                  <Button fx:id="undoButton" maxWidth="Infinity" mnemonicParsing="false" styleClass="undo-button" stylesheets="@editorview.css" />
                  <Button fx:id="redoButton" maxWidth="Infinity" mnemonicParsing="false" styleClass="redo-button" stylesheets="@editorview.css" />
                  <Button fx:id="exportButton" maxWidth="Infinity" mnemonicParsing="false" styleClass="export-button" stylesheets="@editorview.css">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" spacing="25.0" styleClass="editor-toolbar">
               <children>
                  <Button fx:id="addFlashcardButton" prefHeight="35.0" prefWidth="75.0" styleClass="add-flashcard-button" HBox.hgrow="ALWAYS" />
                  <Button fx:id="addStackButton" prefHeight="35.0" prefWidth="75.0" styleClass="add-stack-button" HBox.hgrow="ALWAYS" />
                  <Button fx:id="playButton" prefHeight="35.0" prefWidth="75.0" styleClass="play-button" HBox.hgrow="ALWAYS" />
               </children></HBox>
            <GridPane alignment="CENTER" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints />
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="NEVER" />
              </rowConstraints>
               <children>
                  <Label prefHeight="20.0" prefWidth="114.0" text="Schrift" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <ChoiceBox fx:id="fontTypeCB" maxWidth="Infinity" prefHeight="30.0" prefWidth="115.0" styleClass="font-box" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets right="10.0" />
                     </GridPane.margin></ChoiceBox>
                  <ColorPicker fx:id="fontColorPicker" prefHeight="30.0" prefWidth="70.0" styleClass="font-color-box" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="10.0" right="35.0" />
                     </GridPane.margin></ColorPicker>
                  <ChoiceBox fx:id="fontSizeCB" prefHeight="30.0" prefWidth="65.0" styleClass="font-size-box" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                  <HBox alignment="CENTER_LEFT" GridPane.rowIndex="3">
                     <children>
                        <Button fx:id="addBulletListButton" prefHeight="31.0" prefWidth="40.0" styleClass="add-bullet-list-button" HBox.hgrow="ALWAYS" />
                        <Button fx:id="addNumberedListButton" prefHeight="31.0" prefWidth="40.0" styleClass="add-numbered-list-button" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="176.0" spacing="10" GridPane.columnSpan="3" GridPane.rowIndex="2">
                     <children>
                        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                           <ToggleButton maxWidth="Infinity" prefHeight="31.0" prefWidth="43.0" styleClass="bold-button" stylesheets="@editorview.css" text="B" HBox.hgrow="ALWAYS">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font></ToggleButton>
                           <ToggleButton maxWidth="Infinity" prefHeight="31.0" prefWidth="43.0" styleClass="underlined-button" stylesheets="@editorview.css" text="U" underline="true" HBox.hgrow="ALWAYS">
                              <font>
                                 <Font name="System Bold" size="13.0" />
                              </font></ToggleButton>
                           <ToggleButton maxWidth="Infinity" prefHeight="31.0" prefWidth="43.0" styleClass="italic-button" stylesheets="@editorview.css" text="I" HBox.hgrow="ALWAYS">
                              <font>
                                 <Font name="Times New Roman Bold Italic" size="14.0" />
                              </font></ToggleButton>
                        </HBox>
                        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                           <ToggleButton fx:id="leftAlignButton" maxWidth="Infinity" prefHeight="31.0" prefWidth="42.0" styleClass="left-align-button" HBox.hgrow="ALWAYS" />
                           <ToggleButton fx:id="blockAlignButton" maxWidth="Infinity" prefHeight="31.0" prefWidth="42.0" styleClass="block-align-button" HBox.hgrow="ALWAYS" />
                           <ToggleButton fx:id="rightAlignButton" maxWidth="Infinity" prefHeight="31.0" prefWidth="42.0" styleClass="right-align-button" HBox.hgrow="ALWAYS" />
                        </HBox>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </GridPane>
            <Label fx:id="projectNameLabel" prefWidth="Infinity" style="-fx-border-width: 1 0 0 0; -fx-border-color: #B6B6B6;" text="Projekt Name">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <font>
                  <Font name="Noto Sans CJK JP Bold" size="13.0" />
               </font>
            </Label>
            <ScrollPane fitToWidth="true" styleClass="scroll" VBox.vgrow="ALWAYS">
               <content>
                  <TreeView />
               </content>
            </ScrollPane>
            <HBox alignment="CENTER" spacing="15.0" styleClass="tree-view-toolbar">
               <children>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="duplicateFlashcardButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="35.0" styleClass="duplicate-button" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="moveFlashcardDownButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="32.0" styleClass="move-up-button" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="moveFlashcardUpButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="29.0" styleClass="move-down-button" />
                     </children>
                  </StackPane>
                  <StackPane HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="activeFlashcardLabel" text="3./8" />
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
